{
    "compilerOptions": {
        "target": "ES2023",
        "lib": [
            "esnext"
        ],
        "removeComments": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "LF",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "outDir": "build",
        "inlineSourceMap": true,
        "importHelpers": false,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "*.js",
        ".*.js",
        "*.cjs",
        ".*.cjs",
        "*.mjs",
    ],
    "exclude": [
        "**/*/node_modules/**/*",
    ]
}
