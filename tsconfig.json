{
    "compileOnSave": true,
    "typeAcquisition": {
        "enable": true
    },
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationMap": true,
        "outDir": "build",
        "moduleResolution": "node",
        "target": "ES2021",
        "module": "commonjs",
        "newLine": "LF",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "allowUnreachableCode": false,
        "pretty": true,
        "declaration": true,
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "lib": [
            "esnext"
        ],
        "allowJs": true
    },
    "include": [
        "src/**/*.ts",
        "*.js",
        ".*.js",
        "*.cjs",
        ".*.cjs",
        "*.mjs",
    ],
}
